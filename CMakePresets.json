{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (Release) configuration",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug configuration",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Default (Release) configuration",
            "configurePreset": "default",
            "configuration": "Release",
            "jobs": 8
        },
        {
            "name": "debug",
            "displayName": "Debug configuration",
            "inherits": "default",
            "configurePreset": "debug",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "displayName": "Default (Release) configuration",
            "configurePreset": "default",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "debug",
            "displayName": "Debug configuration",
            "inherits": "default",
            "configuration": "Debug",
            "configurePreset": "debug"
        }
    ]
}